[merge]
	conflictstyle = diff3
	tool = gvimdiff3
[mergetool "gvimdiff3"]
    trustExitCode = false
    cmd = gvim -f -d -c ':set modifiable | :set write | :wincmd J' -M $MERGED $LOCAL $BASE $REMOTE
[alias]
    cp = cherry-pick
    cl = clone
    ci = commit
    co = checkout
    br = branch
    ds = diff --staged
    ll = log --graph --oneline --decorate
    st = status -s -b
    um = diff --name-only --diff-filter=U
    mt = mergetool
    dt = difftool
